@page
@model Johari.Pages.Friends.EnterIdModel
@{
    ViewData["Title"] = "Johari Enter";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body px-lg-5 pt-4">
                <div class="text-secondary text-center py-4"><h3><strong>Enter Id</strong></h3></div>
                <section>
                    <form method="post">                       
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="@Model.RefferedClientId"> Please enter the Id provided to you:</label>
                            <input asp-for="@Model.RefferedClientId" class="form-control" />
                            <span asp-validation-for="@Model.RefferedClientId" class="text-danger"></span>
                        </div>                       
                        <div class="text-center">
                            <div class="form-group">
                                <button type="submit" class="btn btn-secondary w-50">Next...</button>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

