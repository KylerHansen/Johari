@page
@model Johari.Pages.Admin.SearchClientModel
@{
    ViewData["Title"] = "Client Search";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body px-lg-5 pt-4">
                <div class="text-secondary text-center py-4"><h3><strong>Search Clients</strong></h3></div>
                <section>
                    <form class="pb-5 pt-4" method="post">
                        <row style="height:16px;">
                            <span class="col-2">
                                <label class="">Change response limit for all clients:</label>
                            </span>
                            <span class="col-2">
                                <input id="rl" onclick="validate()" onchange="validate()" asp-for="@Model.newResponseLimit" class="col-2 p-2 w-25" style="height: 32px;" type="number" />
                            </span>
                            <span class="col-2">
                                <button id="btn_submit" class="col-2 btn btn-success" type="submit">Save</button>
                            </span>
                                                       
                        </row>
                    

                    </form>
                    <table id="DT_load" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    First Name
                                </th>
                                <th>
                                    Last Name
                                </th>
                                <th>
                                    Response Limit                                          
                                </th>
                                <th>                                    
                                    Total Submissions
                                </th>
                                <th>                                                                         
                                    
                                </th>
                            </tr>
                        </thead>
                    </table>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/SearchClient.js"></script>
    
    <script>

        document.getElementById("btn_submit").disabled = true;
        var inpt = document.getElementById("rl");
        
        function validate() {          

            if (inpt.value > 0) {

                document.getElementById("btn_submit").disabled = false;
           
            } else {
                inpt.value = 0;
                document.getElementById("btn_submit").disabled = true;
            }

        }

    </script>

}
