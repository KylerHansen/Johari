@using Infrastructure.Services;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Johari</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/CustomColors.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="search-background">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-brand" >Johari</div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole(SD.ClientRole) || User.IsInRole(SD.AdminRole) || User.IsInRole(SD.FriendRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-page="/Index">Home</a>
                            </li>
                        }
                        @if (User.IsInRole(SD.ClientRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-page="/Clients/Responses">Personal Attributes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-page="/Clients/SubmissionConfirmed">My ID</a>
                            </li>
                        }

                        @if (User.IsInRole(SD.FriendRole))
                        {
                        @*<li class="nav-item">
                        <a class="nav-link " asp-area="" asp-page="/Friends/EnterId">Submit Response</a>
                        </li>*@//The only way they can access this page is through a given link.
                        }

                        @if (User.IsInRole(SD.AdminRole))
                        {                          

                            <li class="nav-item">
                                <a class="nav-link " asp-page="/Admin/Users/Index">Manage Users</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link " asp-page="/Admin/SearchClient">Clients</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link " asp-page="/Admin/EditAdjectives">Adjectives</a>
                            </li>

                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2021 - Johari - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
